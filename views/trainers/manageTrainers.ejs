<html>
    <head>
        <title>Manage trainers</title>
    </head>
    <body>
        <a href="/create/trainer">Add new trainer</a>
        <ul>
        <% trainers.forEach((trainer)=>{ %>
            <li>
                id: <%=trainer.id%>
                name: <%=trainer.name%>
                <a href="/update/trainer/<%=trainer.id%>">update</a>
                <form action="/delete/trainer/<%=trainer.id%>" method="post">
                    <button type="submit" onclick="return confirm('Are you sure, you want to delete this trainer?')">Delete</button>
                </form>
            </li>
        <% }) %>
        </ul>    
        <a href="/">Back to Home</a>
    </body>
</html>